<h1>Add Expense</h1>
<%= link_to 'Back', categories_path%>
<%= form_with(model: @expense, url: category_expenses_path(user_id: current_user.id, category_id: @category.id), local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label :amount %>
    <%= form.number_field :amount, class: 'form-control' %>
  </div>
  <%= form.submit 'Add Expense', class: 'btn btn-primary' %>
<% end %>